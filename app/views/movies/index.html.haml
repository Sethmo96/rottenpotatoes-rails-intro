-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, id: "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings_hash[rating]
  = submit_tag 'Refresh' , id: "ratings_submit"

%table#movies
  %thead
    %tr
      %th{class: @class_title}= link_to "Movie Title", movies_path(:sort => "title"), id: "title_header", class: @class_title
      %th Rating
      %th{class: @class_release_date}= link_to "Release Date", movies_path(:sort => "release_date"), id: "release_date_header", class: @class_release_date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
